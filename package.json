{
  "name": "crime-alert",
  "version": "1.0.0",
  "description": "An app that monitors crimes in your neighborhood",
  "scripts": {
    "prettier": "prettier --write ./client ./server --loglevel silent",
    "lint": "eslint ./client/src ./server/src"
  },
  "author": "Tobias Lundell",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "2.1.1"
  },
  "lint-staged": {
    "{client/src/*,server/src/*}": [
      "yarn prettier"
    ],
    "{client/src,server/src}/**/*.{js,jsx,ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
